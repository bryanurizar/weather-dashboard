<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('header'); -%>
</head>
<body>

    <nav>
        <% if (formattedQuery === '') { %>
            <h1>Weather Forecast</h1>
        <% } else { %>
            <h1>Weather Forecast</h1>
        <% } %>

            <form id="no-fade" action="/" method="POST" autocomplete="off" >
                <input type="text" name="location" placeholder="Search...">
                <button id="search-button" type="submit">Search</button>
            </form>

            <% if (formattedQuery !== '') { %>
                <h2 class='location'>Location: <%=formattedQuery%></h2>
            <% } %>
    </nav>

    <section class="container">

        <% if (dates.length === 0) { %>
                <p class='start fade-in'>Please search for a city..</p>

        <% } else { %>
            <% for (let i = 0; i < 5; i++) { %>
                <div class="days">
                    <div class="information fade-in">
                        <h3> <%= dates[i] %> </h2>
                        <p class="temperature fade-in"><%= dailyTemps[i] %> </p>
                        <img src=<%=iconURLS[i]%> alt="">
                        <p class="descriptions fade-in"><%= descriptions[i] %> </p>
                    </div>    
                </div>
            <% } %>
        <% } %>

    </section>

</body>
</html>